{
    "name": "nexon-reward-system",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "start:dev:api": "cross-env mode=local service=api nest start --watch api",
        "start:dev:auth": "cross-env mode=local service=auth nest start --watch auth",
        "start:dev:event": "cross-env mode=local service=event nest start --watch event",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/apps/nexon-reward-system/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./apps/nexon-reward-system/test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^11.1.1",
        "@nestjs/core": "^11.1.1",
        "@nestjs/microservices": "^11.1.1",
        "@nestjs/mongoose": "^11.0.3",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.1",
        "@nestjs/swagger": "^11.2.0",
        "@songkeys/nestjs-redis": "^10.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cookie-parser": "^1.4.7",
        "helmet": "^8.1.0",
        "http-proxy-middleware": "^3.0.5",
        "ioredis": "^5.6.1",
        "mongoose": "^8.15.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.2"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^11.1.1",
        "@types/cookie-parser": "^1.4.8",
        "@types/express": "^4.17.13",
        "@types/jest": "29.5.0",
        "@types/node": "18.15.11",
        "@types/passport-jwt": "^4.0.1",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "29.5.0",
        "prettier": "^2.3.2",
        "source-map-support": "^0.5.21",
        "supertest": "^6.1.3",
        "ts-jest": "29.0.5",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.2.0",
        "typescript": "^4.7.4"
    },
    "overrides": {
        "@songkeys/nestjs-redis": {
            "@nestjs/common": "11.0.7",
            "@nestjs/core": "11.0.7"
        }
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/apps/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "^@module/module(|/.*)$": "<rootDir>/libs/module/src/$1"
        }
    }
}
